# VIM is the answer
export EDITOR=vim

ex_path_add() {
    if [ -e "$1" ]; then
        export PATH=$PATH:"$1"
    fi
}

# Personal binaries / scripts
ex_path_add $HOME/bin
ex_path_add $HOME/scripts

# Application / language package binaries
ex_path_add $HOME/node_modules/.bin
ex_path_add $HOME/.cabal/bin

# For iBus
#export GTK_IM_MODULE=ibus
#export XMODIFIERS=@im=ibus
#export QT_IM_MODULE=ibus

# OpenMP related
OMP_NUM_THREADS=4
