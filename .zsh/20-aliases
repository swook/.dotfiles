# MISC ALIASES
alias alsamixer='alsamixer -c 0'
alias pass='apg -m 15 -x 22 -M lN'
alias up='ping 8.8.8.8'
alias nwatch='watch -n0,5'

# BUP
alias bupidx='bup index --one-file-system --exclude-from=$HOME/.bupexcludes $HOME'
alias bupsave='bup save -r h:bup -n x230-home .'

# ETHERNET RESETTING
alias e1000ereset='sudo rmmod e1000e && sudo modprobe e1000e'
alias networkingreset='sudo service networking restart && sudo service network-manager restart'
alias lanreset='e1000ereset && networkingreset'

# VIM ALIASES
alias -g vimrc='~/.vimrc'

# GAE ALIASES
alias gaedev='dev_appserver.py --port 9090 --datastore_path=./.datastore.db .'
alias gaeup='appcfg.py --oauth2 update .'

# NAVIGATION ALIASES
alias dir='ls -lah --color=auto'
alias d='dir'
alias grep='grep --color=auto'
alias grepi='grep -Iri'

# APT ALIASES
alias aup='sudo apt-get update'
alias adist='sudo apt-get dist-upgrade'
alias aupdist='aup && adist'
alias arem='sudo apt-get remove --purge'
alias aarem='sudo apt-get autoremove --purge'
alias asearch='aptitude search'
alias ashow='aptitude show'
alias ainst='sudo apt-get install'
alias afile='apt-file search'
alias ahold='sudo apt-mark hold'
alias aunhold='sudo apt-mark unhold'

# ZSH ALIASES
alias -g zalias='~/.zsh/20-aliases'
alias zresource='source ~/.zshrc'

# GLOBAL ALIASES
alias -g H='| head'
alias -g T='| tail'
alias -g TT='| tail -f'
alias -g G='| grep'
alias -g GI='| grep -i'
alias -g L="| less"
alias -g M="| most"
alias -g B="&|"
alias -g HL="--help"
alias -g LL="2>&1 | less"
alias -g CA="2>&1 | cat -A"
alias -g NE="2> /dev/null"
alias -g NUL="> /dev/null 2>&1"

# KEYBOARD LAYOUT ALIASES
alias de='setxkbmap de'
alias deno='setxkbmap de nodeadkeys'
alias us='setxkbmap us'

# GIT ALIASES
alias g='git'

# replaceall DIR REGEX, e.g. replaceall . s/from/to/g
replaceall() {
    find "$1" -type f | xargs perl -p -i -e "$2"
}

allfiles() {
    find "$1" -type f
}

spaces2tabs() {
    replaceall "$1" 's/    /\t/g'
}

tabs2spaces() {
    replaceall "$1" 's/\t/    /g'
}

stripendwhitespace() {
    replaceall "$1" 's/[ \t]*$//g'
}

